<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kracz0.desktopwitelonbank.Controllers.Client.ClientMenuController" stylesheets="@../../Styles/Sidebar.css" prefWidth="60.0" prefHeight="750.0">
    <VBox fx:id="sidebar" alignment="CENTER" prefWidth="60.0" spacing="20" styleClass="sidebar"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Button fx:id="sidebar_dashboard_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="HOME" styleClass="sidebar_icon active_icon" />
            </graphic>
        </Button>
        <Button fx:id="sidebar_transactions_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="LIST_ALT" styleClass="sidebar_icon" />
            </graphic>
        </Button>
        <Button fx:id="sidebar_addressBook_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="BOOK" styleClass="sidebar_icon" />
            </graphic>
        </Button>
        <Button fx:id="sidebar_crypto_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="BITCOIN" styleClass="sidebar_icon" />
            </graphic>
        </Button>
        <Button fx:id="sidebar_profile_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="USER" styleClass="sidebar_icon" />
            </graphic>
        </Button>
        <Button fx:id="sidebar_settings_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="COG" styleClass="sidebar_icon" />
            </graphic>
        </Button>
    </VBox>
</AnchorPane>
