<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="750.0" prefWidth="60.0" stylesheets="@../../Styles/Sidebar.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kracz0.desktopwitelonbank.Controllers.Client.ClientMenuController">
    <VBox fx:id="sidebar" prefWidth="60.0" spacing="20" styleClass="sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">

        <!-- ÅšRODKOWE PRZYCISKI (Dashboard, Transakcje itd.) -->
        <VBox alignment="CENTER" prefHeight="667.0" prefWidth="60.0" spacing="20">
            <Button fx:id="sidebar_dashboard_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="HOME" styleClass="sidebar_icon active_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
            <Button fx:id="sidebar_transactions_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="LIST_ALT" styleClass="sidebar_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
            <Button fx:id="sidebar_addressBook_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="BOOK" styleClass="sidebar_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
            <Button fx:id="sidebar_crypto_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="BITCOIN" styleClass="sidebar_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
            <Button fx:id="sidebar_profile_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="USER" styleClass="sidebar_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
            <Button fx:id="sidebar_standingOrder_btn" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="REPEAT" styleClass="sidebar_icon" />
                </graphic>
            <font>
               <Font size="14.0" />
            </font>
            </Button>
        </VBox>

        <Region VBox.vgrow="ALWAYS" />

        <Button fx:id="sidebar_logout_btn" mnemonicParsing="false" styleClass="sidebar_btn">
            <graphic>
                <FontAwesomeIconView glyphName="SIGN_OUT" styleClass="sidebar_icon" />
            </graphic>
         <font>
            <Font size="14.0" />
         </font>
        </Button>
    </VBox>
</AnchorPane>
