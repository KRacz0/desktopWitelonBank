<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.AnchorPane?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.layout.Region?>
<BorderPane fx:id="adminRoot" prefHeight="700.0" prefWidth="1100.0"
            stylesheets="@../../Styles/Admin/Admin.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kracz0.desktopwitelonbank.Controllers.Admin.AdminController">

    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10;">
            <Region fx:id="spacer" HBox.hgrow="ALWAYS"/>
            <Button fx:id="adminLogoutButton" mnemonicParsing="false" styleClass="sidebar_btn">
                <graphic>
                    <FontAwesomeIconView glyphName="SIGN_OUT" styleClass="sidebar_icon"/>
                </graphic>
            </Button>
        </HBox>
    </top>

    <center>
        <StackPane fx:id="adminCenter">
            <VBox alignment="TOP_CENTER" spacing="20.0">

                <HBox fx:id="statsContainer" alignment="CENTER" spacing="15.0"/>

                <ListView fx:id="kontaListView" prefHeight="520.0" prefWidth="1070.0"/>

                <Button onAction="#openReportModal" text="Generuj raport przelewÃ³w"
                        styleClass="action_btn" prefWidth="220"/>
            </VBox>

            <StackPane fx:id="reportModalOverlay" visible="false" pickOnBounds="true"
                       styleClass="modal_overlay"
                       AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

                <VBox alignment="CENTER" prefWidth="1100" prefHeight="700">
                    <AnchorPane maxWidth="440" maxHeight="400" styleClass="modal_box">
                        <StackPane alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
                                   AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

                            <VBox spacing="14" alignment="CENTER" maxWidth="360">

                                <Label text="Generowanie raportu PDF" styleClass="modal_title"/>

                                <HBox spacing="10" alignment="CENTER">
                                    <VBox spacing="2" alignment="CENTER">
                                        <Label text="Od" styleClass="modal_label"/>
                                        <DatePicker fx:id="startDatePicker" styleClass="date-picker" prefWidth="150"/>
                                    </VBox>
                                    <VBox spacing="2" alignment="CENTER">
                                        <Label text="Do" styleClass="modal_label"/>
                                        <DatePicker fx:id="endDatePicker" styleClass="date-picker" prefWidth="150"/>
                                    </VBox>
                                </HBox>

                                <HBox spacing="12" alignment="CENTER">
                                    <Button text="Anuluj" onAction="#closeReportModal" styleClass="secondary_btn"/>
                                    <Button text="Pobierz raport" onAction="#downloadReport" styleClass="action_btn"/>
                                </HBox>

                                <VBox fx:id="reportStatusBox" spacing="10" alignment="CENTER" visible="false">
                                    <Label fx:id="reportStatusLabel" styleClass="modal_status_message" wrapText="true"/>
                                </VBox>

                            </VBox>
                        </StackPane>
                    </AnchorPane>
                </VBox>
            </StackPane>
        </StackPane>
    </center>
</BorderPane>

